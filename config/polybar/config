[colors]
background = #282828
background-alt = #3f3a3c
foreground = #3f3a3c
color8 = #3f3a3c
secondary = #87af87
third = #e6d6ac

[settings]
label-focused-underline= ${colors.foreground}
throttle-output = 5
throttle-output-for = 10
throttle-input-for = 30
screenchange-reload = true
pseudo-transparency = false


[bar/bar1]

override-redirect = false 
wm-restack = bspwm
bottom = false 
background = ${colors.background}
foreground = ${colors.foreground}
fixed-center = true
width = 100%
height = 25
radius = 0.0
line-size = 0
line-color = #f00
offset-y = 0
offset-x = 0

monitor = HDMI-1 


font-0 = Pragmata Pro Mono:style=Bold:pixelsize=10;3

modules-left = alsa time 
modules-right = mplayer network
modules-center = bspwm

tray-position = right 
tray-padding = 5
tray-background = ${colors.alt.background}

[module/bspwm]
type = internal/bspwm
index-sort = true
enable-click = true
format = <label-state>
foramt-prefix-padding = 2
pin-workspaces = true

label-empty-foreground = #7f7c7d
label-focused-foreground = #87af87
label-focused-background = ${colors.background-alt} 
label-focused = %name%
label-focused-padding = 2
label-occupied = %name%
label-occupied-padding = 2
label-occupied-foreground = #e6d6ac
label-empty = %name%
label-empty-padding = 2

[module/time]
type = internal/date
time = %I:%M %p | %B %d, %A 
format = <label>
format-prefix = TIME:
format-prefix-padding = 1
format-foreground = #87af87
format-padding = 2
label = %time%
label-foreground = #e6d6ac

[module/network]
type = internal/network
interface = wlp0s20f0u3
interval = 3.0
unknown-as-up = true
accumulate-stats = true

format-connected = WIFI: <label-connected>
label-connected = %essid%
format-connected-padding = 2
format-connected-foreground = #6c8c9c
label-connected-foreground = ${colors.color8}

[module/alsa]
type = internal/alsa

format-volume = VOL: <label-volume>
label-muted = MUTED 
label-muted-padding = 2
label-volume-foreground = #e6d6ac
format-volume-foreground = #87af87
format-volume-padding = 2

[module/mplayer]
type = custom/script
exec = $HOME/.config/polybar/scripts/player.sh
interval = 1
click-left = playerctl previous &
click-right = playerctl next &
click-middle = playerctl play-pause &
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.secondary}
format-foreground = ${colors.third}


[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "î‰¯ "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.secondary}
format-foreground = ${colors.third}

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

